<script>
    var total1=0;
    var cartdiv=document.getElementById("cartdiv");
    var carte=JSON.parse(localStorage.getItem("cart"));
    console.log(carte);

    var data2=document.getElementById("tbody");

    carte.forEach(function(el){
         var tr1=document.createElement("tr");

        var td1=document.createElement("td");
        td1.innerHTML=el.name;

         var td2=document.createElement("td");
        td2.innerHTML=el.price;

        total1+=Number(el.price);

        var total=document.getElementById("total");
        total.innerHTML=total1;

        


         var img=document.createElement("img");
  img.src="https://spareshub.com/pub/media/catalog/product/placeholder/default/xno_image_3.png.pagespeed.ic.CL0sy0K3dL.webp"
  img.setAttribute("class","image1");
        
        tr1.append(img,td1,td2);

        data2.append(tr1);

        document.getElementById("order").addEventListener("click",function(){
           JSON.parse(localStorage.getItem("cart"));
           window.localStorage.removeItem('cart');
        })
  
 });



</script>
